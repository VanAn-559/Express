
<div class="mt-4">
  <div class="container">
    <h3>Sửa thông tin sản phẩm</h3>
  </div>

<div class="mt-4">
      <form method="post" action="/courses/{{course._id}}?_method=PUT">
        <div class="container">
        <div class="form-group">
          <div>
          <label for="name">name</label>
          <input type="text" class="form-control" value="{{course.name}}" id="name" name = "name">
          </div>
          <div class="form-group">
          <label for="price">price</label>
          <input type="text" class="form-control" value="{{course.price}}" name = "price">
          </div>
          <label for="brand">brand</label>
          <input type="text" class="form-control" value="{{course.brand}}" name = "brand">
          </div>
          <div class="form-group">
          <label for="image">image</label>
          <input type="text" class="form-control" value="{{course.image}}" name = "image">
          </div>
        </div>
        <button type="submit"  class="btn btn-primary" >sửa</button>
      </form>
  </div>
</div>


